{
  "name": "tsoa-monorepo",
  "description": "Build swagger-compliant REST APIs using TypeScript and Node",
  "version": "3.0.8",
  "private": true,
  "keywords": [
    "typescript",
    "openapi",
    "swagger",
    "server",
    "node",
    "node.js",
    "codegen",
    "generation",
    "express",
    "hapi.js",
    "koa"
  ],
  "author": "Luke Autry <lukeautry@gmail.com> (http://www.lukeautry.com)",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "deploy": "lerna version patch -m \"Release v%s\" && lerna publish",
    "prepare": "yarn build",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "pre-commit": "yarn lint && yarn test"
  },
  "dependencies": {
  },
  "devDependencies": {
    "lerna": "^3.20.2",
    "husky": "^3.0.2",
    "lint-staged": "9.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukeautry/tsoa.git"
  },
  "engines": {
    "yarn": ">=1.9.4",
    "node": ">=6.0.0"
  },
  "engineStrict": true,
  "workspaces": {
    "packages": [
      "cli",
      "runtime",
      "tsoa"
    ]
  }
}
